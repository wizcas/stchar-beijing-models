{
  "name": "status-dashboard",
  "version": "1.0.0",
  "scripts": {
    "build": "node build.js",
    "build:prod": "node build.js --prod",
    "build:prod:debug": "node build.js --prod --no-minify",
    "dev": "node dev-server.js",
    "config:build": "node build-config.js",
    "config:verify": "node verify-config.js",
    "analyze:tokens": "node analyze-tokens.js",
    "analyze:tokens:verbose": "node analyze-tokens.js --verbose",
    "analyze:tokens:json": "node analyze-tokens.js --format json",
    "copy:status": "node copy-status.js",
    "copy:html": "pnpm build:prod && node copy-html.js",
    "x:context": "node x-scripts/extract-context.js"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "autoprefixer": "^10.4.22",
    "cssnano": "^7.1.2",
    "esbuild": "^0.19.0",
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "js-yaml": "^4.1.1",
    "postcss": "^8.5.6"
  }
}
